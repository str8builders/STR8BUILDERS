{
  "expo": {
    "name": "STR8 BUILD",
    "slug": "str8build",
    "version": "3.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "str8build",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0c0a1f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "nz.co.str8build.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for capturing project photos and documentation.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save and retrieve project photos."
      }
    },
    "android": {
      "package": "nz.co.str8build.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#0c0a1f"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "name": "STR8 BUILD",
      "shortName": "STR8 BUILD",
      "lang": "en",
      "scope": "/",
      "themeColor": "#0c0a1f",
      "backgroundColor": "#0c0a1f",
      "display": "standalone",
      "orientation": "portrait",
      "dir": "ltr",
      "preferRelatedApplications": false,
      "startUrl": "/",
      "description": "Professional construction management app for NZ builders",
      "categories": ["business", "productivity", "utilities"]
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow STR8 BUILD to access your camera for project documentation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "str8build-app"
      }
    }
  }
}
